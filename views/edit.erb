<form action="/pizza-orders/<%=@order.id%>/update" method="post">
  <label for="first-name"> First name </label>
  <input id="first-name" type="text" name="first_name" value="<%= @order.first_name %>">

  <label for="last-name"> Last name </label>
  <input id="last-name" type="text" name="last_name" value="<%= @order.last_name %>">

  <label for="pizza-select"> Select pizza </label>
  <select id="pizza-select" name="topping">
    <option value="Margherita">Margherita</option>
    <option value="Calzone">Calzone</option>
  </select>

  <label for="quantity"> Quantity </label>
  <input id="quantity" type="number" name="quantity" value="<%= @order.quantity %>" required>

  <input type="submit" value="Update order">
</form>
